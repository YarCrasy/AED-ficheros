<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" spacing="20"
      xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="aed.elrincon.controller.CsvController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- Título principal -->
    <VBox alignment="CENTER" spacing="8">
        <Label text="Gestión de Estudiantes - CSV"
               style="-fx-font-size: 26px; -fx-font-weight: bold; -fx-text-fill: #2c3e50;"/>
        <Label text="Administra la lista de estudiantes en formato CSV"
               style="-fx-font-size: 14px; -fx-text-fill: #7f8c8d;"/>
    </VBox>

    <!-- Panel informativo -->
    <HBox alignment="CENTER_LEFT" spacing="15"
          style="-fx-background-color: #f8f9fa; -fx-background-radius: 8; -fx-padding: 12; -fx-border-color: #dee2e6; -fx-border-radius: 8; -fx-border-width: 1;">
        <Label fx:id="labelContador" text="Estudiantes: 0"
               style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: #495057;"/>
        <Separator orientation="VERTICAL" prefHeight="20"/>
        <Label fx:id="labelEstado" text="Sistema listo"
               style="-fx-font-size: 13px; -fx-text-fill: #6c757d;"/>
    </HBox>

    <!-- Sección de la tabla -->
    <VBox spacing="8">
        <Label text="Lista de Estudiantes"
               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #495057;"/>

        <TableView fx:id="tableView" prefHeight="350" prefWidth="900"
                   style="-fx-background-color: white; -fx-border-color: #ced4da; -fx-border-radius: 6; -fx-border-width: 1;">
            <columns>
                <TableColumn fx:id="colNombre" text="Nombre" prefWidth="200"/>
                <TableColumn fx:id="colApellido" text="Apellido" prefWidth="200"/>
                <TableColumn fx:id="colEdad" text="Edad" prefWidth="100"/>
                <TableColumn fx:id="colMatricula" text="Matrícula" prefWidth="150"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
        </TableView>
    </VBox>

    <!-- Botones de operaciones CRUD -->
    <VBox spacing="8" alignment="CENTER">
        <Label text="Operaciones Básicas"
               style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #495057;"/>

        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="buttonAnadir" text="Añadir"
                    style="-fx-font-size: 13px; -fx-pref-width: 110; -fx-pref-height: 35;
                           -fx-background-color: #28a745; -fx-text-fill: white;"/>
            <Button fx:id="buttonEditar" text="Editar"
                    style="-fx-font-size: 13px; -fx-pref-width: 110; -fx-pref-height: 35;
                           -fx-background-color: #007bff; -fx-text-fill: white;"/>
            <Button fx:id="buttonEliminar" text="Eliminar"
                    style="-fx-font-size: 13px; -fx-pref-width: 110; -fx-pref-height: 35;
                           -fx-background-color: #dc3545; -fx-text-fill: white;"/>
        </HBox>
    </VBox>

    <!-- Botones de operaciones con archivos -->
    <VBox spacing="8" alignment="CENTER">
        <Label text="Operaciones con Archivos CSV"
               style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #495057;"/>

        <HBox alignment="CENTER" spacing="10">
            <Button fx:id="buttonGuardar" text="Guardar CSV"
                    style="-fx-font-size: 13px; -fx-pref-width: 140; -fx-pref-height: 35;
                           -fx-background-color: #6f42c1; -fx-text-fill: white;"/>
            <Button fx:id="buttonCargar" text="Cargar CSV"
                    style="-fx-font-size: 13px; -fx-pref-width: 140; -fx-pref-height: 35;
                           -fx-background-color: #20c997; -fx-text-fill: white;"/>
        </HBox>
    </VBox>

    <!-- Botón para regresar al menú -->
    <Button fx:id="buttonVolver" text="Volver al Menú Principal"
            style="-fx-font-size: 13px; -fx-pref-width: 180; -fx-pref-height: 35;
                   -fx-background-color: #6c757d; -fx-text-fill: white;"/>

    <!-- Información del sistema -->
    <Label text="Sistema de Gestión de Estudiantes - Formato CSV"
           style="-fx-font-size: 11px; -fx-text-fill: #6c757d;"/>

</VBox>
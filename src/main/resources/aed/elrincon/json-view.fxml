<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="aed.elrincon.controller.JSONController">

   <!-- FORMULARIO -->
   <top>
      <GridPane hgap="10" vgap="10">
         <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
         </padding>
         
         <Label text="Nombre"/>
         <TextField fx:id="txtNombre"/>
         
         <Label text="Apellido"/>
         <TextField fx:id="txtApellido"/>
         
         <Label text="Edad"/>
         <TextField fx:id="txtEdad"/>
         
         <Label text="Matrícula"/>
         <TextField fx:id="txtMatricula"/>
         
         <HBox spacing="10">
            <Button text="Agregar" onAction="#agregarStudent"/>
            <Button text="Modificar" onAction="#modificarStudent"/>
            <Button text="Eliminar" onAction="#eliminarStudent"/>
            <Button text="Limpiar" onAction="#limpiarCampos"/>
         </HBox>
      </GridPane>
   </top>

   <!-- TABLA -->
   <center>
      <TableView fx:id="studentsTable">
         <columns>
            <TableColumn fx:id="colNombre" text="Nombre"/>
            <TableColumn fx:id="colApellido" text="Apellido"/>
            <TableColumn fx:id="colEdad" text="Edad"/>
            <TableColumn fx:id="colMatricula" text="Matrícula"/>
         </columns>
      </TableView>
   </center>

   <!-- JSON + ESTADO -->
   <bottom>
      <VBox spacing="5">
         <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
         </padding>
         <Label text="Contenido del archivo JSON"/>
         <TextArea fx:id="txtJsonContent" prefRowCount="6" editable="false"/>
         <Label fx:id="lblStatus" text="Estado del sistema"/>
      </VBox>
   </bottom>

</BorderPane>

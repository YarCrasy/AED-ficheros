<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="aed.elrincon.controller.JSONController">

    <!-- FORMULARIO -->
    <top>
        <GridPane hgap="10" vgap="10" padding="10">
            <Label text="Nombre" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
            <TextField fx:id="txtNombre" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

            <Label text="Apellido" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
            <TextField fx:id="txtApellido" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

            <Label text="Edad" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
            <TextField fx:id="txtEdad" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

            <Label text="Matrícula" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
            <TextField fx:id="txtMatricula" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

            <HBox spacing="10" GridPane.rowIndex="4" GridPane.columnIndex="1">
                <Button fx:id="btnAgregar" text="Agregar" onAction="#agregarStudent"/>
                <Button fx:id="btnModificar" text="Modificar" onAction="#modificarStudent"/>
                <Button fx:id="btnEliminar" text="Eliminar" onAction="#eliminarStudent"/>
                <Button fx:id="btnLimpiar" text="Limpiar" onAction="#limpiarCampos"/>
            </HBox>
        </GridPane>
    </top>

    <!-- TABLA -->
    <center>
        <TableView fx:id="studentsTable">
            <columns>
                <TableColumn fx:id="colNombre" text="Nombre"/>
                <TableColumn fx:id="colApellido" text="Apellido"/>
                <TableColumn fx:id="colEdad" text="Edad"/>
                <TableColumn fx:id="colMatricula" text="Matrícula"/>
            </columns>
        </TableView>
    </center>

    <!-- JSON + ESTADO -->
    <bottom>
        <VBox spacing="5" padding="10">
            <Label text="Contenido del archivo JSON"/>
            <TextArea fx:id="txtJsonContent" prefRowCount="6"/>
            <Label fx:id="lblStatus" text="Estado del sistema"/>
        </VBox>
    </bottom>

</BorderPane>
